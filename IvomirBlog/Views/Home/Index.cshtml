@{
    ViewBag.Title = "Recent posts";
}

@model List<IvomirBlog.Models.Post>

<section class="row">
    @foreach (var post in Model)
    {
        <article class="post col-md-6">
            <h1 class="title">@post.Title</h1>
            <div class="about">
                Posted
                @if (post.Author != null)
                {
                    @:by
                    <i>@post.Author.FullName (@post.Author.UserName)</i>
                }                
                on <strong>@post.Date</strong>
            </div>
            <div class="body">
                @Html.Raw(post.Body)
            </div>
        </article>
    }
</section>